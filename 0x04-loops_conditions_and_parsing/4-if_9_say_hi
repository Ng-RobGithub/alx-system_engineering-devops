#!/usr/bin/env bash
# This script displays "Best School" 10 times, with a special message on the 9th iteration.

count=0  # Initialize a counter

while [ "$count" -lt 10 ]; do
if [ "$count" -eq 8 ]; then
echo -e "Best School\nHi"  # Display "Best School" and "Hi" on separate lines for the 9th iteration
else
echo "Best School"
fi

count=$((count + 1))  # Increment the counter
done
